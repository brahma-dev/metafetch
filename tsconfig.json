{
  "compilerOptions": {
    "target": "ES2022",                // Node 18 fully supports ES2022 features
    "module": "ES2022",                 // **CHANGE THIS**: Generates standard ESM
    "moduleResolution": "Node",         // **CHANGE THIS**: The classic resolution for Node
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
